      <ul class="nav">
      <li>
        <a href="/home">Home</a>
      <li>
        
          <form id="catalog-form" action="/catalog" method="POST">
            <a href="#" onclick="document.getElementById('catalog-form').submit(); event.preventDefault();">Catalog</a>
          </form>
        
        <li class="dropdown">
          <a href="#">Account &#9662;</a>
          <ul class="dropdown-content">
            <li>
              <a href="#" onclick="submitForm('/login')">Sign in</a>
              <form action="/login" method="POST" id="login-form">
                <input type="hidden" name="account_action" value="login">
              </form>
            </li>
            <li>
              <a href="#" onclick="submitForm('/login')">Account details</a>
              <form action="/login" method="POST" id="index-form">
                <input type="hidden" name="account_action" value="index-details">
              </form>
            </li>
            <li>
              <form id="logout-form" action="/logout?_method=DELETE" method="POST">
                <a href="#" onclick="document.getElementById('logout-form').submit(); event.preventDefault();">Log Out</a>
              </form>            
              </form>
            </li>
          </form>   
          <li>
            <a href="/accountactions">Account Actions</a>
          </li>            
          </form>
        </li>
          </ul>
        </li>
      </ul>
    </header>
  

    
    <h1>Welcome, <%= name %>!</h1>

    
    <div class="account-info">
      <div class="account-section">
        <h2>Personal Information</h2>
        <p>First Name: <%= name %></p>
        <p>Last Name: <%= lastname %></p>
        <p>Email: <%= email %></p>
        <p>Phone: N/A</p>
      </div>
      
      <div class="account-section">
        <h2>Account Details</h2>
        <p>User Type: <%= usertype %></p>
        <p>Account ID: <%= id %></p>
      </div>

      <div class="account-section">
        <form action="/editinfo" method="GET">
          <button type="submit">Edit Account Information</button>
        </form>
      </div>
    </div>

    <footer class="footer">
